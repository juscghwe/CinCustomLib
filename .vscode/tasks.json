{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\lib${fileBasenameNoExtension}.a",
                "-I${workspaceFolder}\\include",
                "-c"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the custom cin package library."
        },
        {
            "type": "shell",
            "label": "Build Tests",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/test",
                "${workspaceFolder}/test/test_main.cpp",
                "${workspaceFolder}/test/test_inputtypes_incorrect.cpp",
                "${workspaceFolder}/test/test_inputtypes_correct.cpp",
                "${workspaceFolder}/src/cin_custom.cpp",
                "-lgtest",
                "-lgtest_main",
                "-pthread",
                "-o",
                "${workspaceFolder}/bin/test_executable"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the tests for custom cin package."
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/bin/test_executable",
            "dependsOn": [
                "Build Tests"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Run the test executable."
        },
        {
            "label": "Build and Run Tests",
            "dependsOn": [
                "Build Tests",
                "Run Tests"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build an run the tests."
        }
    ],
    "version": "2.0.0"
}